<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base vibrant gradient -->
    <item>
        <shape>
            <gradient
                android:angle="135"
                android:startColor="@color/call_background_start"
                android:centerColor="#FF7EC8FF"
                android:endColor="@color/call_background_end"
                android:type="linear" />
        </shape>
    </item>

    <!-- Accent glow top-left -->
    <item android:top="-120dp" android:left="-120dp">
        <shape>
            <size android:width="420dp" android:height="420dp" />
            <gradient
                android:type="radial"
                android:gradientRadius="260dp"
                android:centerX="0%"
                android:centerY="0%"
                android:startColor="#66B2FFEA"
                android:endColor="#00B2FFEA" />
        </shape>
    </item>

    <!-- Accent glow bottom-right -->
    <item android:bottom="-140dp" android:right="-140dp">
        <shape>
            <size android:width="460dp" android:height="460dp" />
            <gradient
                android:type="radial"
                android:gradientRadius="300dp"
                android:centerX="100%"
                android:centerY="100%"
                android:startColor="#4D7C4DFF"
                android:endColor="#007C4DFF" />
        </shape>
    </item>

    <!-- Soft vignette for depth -->
    <item>
        <shape>
            <gradient
                android:type="radial"
                android:gradientRadius="120%"
                android:centerX="50%"
                android:centerY="50%"
                android:startColor="#00000000"
                android:endColor="#20000000" />
        </shape>
    </item>

    <!-- Subtle top highlight -->
    <item>
        <shape>
            <gradient
                android:angle="270"
                android:startColor="#33FFFFFF"
                android:endColor="#00FFFFFF"
                android:type="linear" />
        </shape>
    </item>
</layer-list>

