<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="Base.Theme.Callx" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/call_primary</item>
        <item name="colorPrimaryVariant">@color/call_primary_dark</item>
        <item name="colorSecondary">@color/call_accent</item>
    </style>

    <style name="Theme.Callx" parent="Base.Theme.Callx" />

    <!-- Call Activity Theme -->
    <style name="Theme.Callx.FullScreen" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowShowWallpaper">false</item>
        <item name="android:windowBackground">@drawable/call_background_gradient</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <!-- Circular Image View Style -->
    <style name="CircularImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
    
    <!-- Perfect Circle Avatar Style -->
    <style name="CircularAvatarStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!-- Text Styles -->
    <style name="CallTextPrimary">
        <item name="android:textColor">@color/text_primary_white</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CallTextSecondary">
        <item name="android:textColor">@color/text_secondary_white</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="CallTextLabel">
        <item name="android:textColor">@color/text_hint_white</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Button Styles -->
    <style name="CallActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="android:layout_width">@dimen/action_button_size</item>
        <item name="android:layout_height">@dimen/action_button_size</item>
        <item name="fabSize">normal</item>
        <item name="tint">@color/white</item>
        <item name="elevation">@dimen/elevation_medium</item>
        <item name="pressedTranslationZ">@dimen/elevation_high</item>
    </style>

    <style name="CallActionButton.Answer">
        <item name="backgroundTint">@color/answer_button_color</item>
        <item name="rippleColor">@color/answer_button_pressed</item>
    </style>

    <style name="CallActionButton.Decline">
        <item name="backgroundTint">@color/decline_button_color</item>
        <item name="rippleColor">@color/decline_button_pressed</item>
    </style>

    <!-- Additional Button Styles -->
    <style name="CallSecondaryButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/white</item>
        <item name="iconTint">@color/white</item>
        <item name="rippleColor">@color/ripple_white</item>
    </style>
</resources> 